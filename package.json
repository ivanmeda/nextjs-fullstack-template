{
  "name": "nextjs-fullstack-template",
  "version": "1.0.0",
  "private": true,
  "templateVersion": "1.0.0",
  "templateRepo": "ivanmeda/nextjs-fullstack-template",
  "scripts": {
    "clean:install": "rm -rf node_modules package-lock.json .next && npm install",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yml,yaml}\"",
    "typecheck": "tsc --noEmit",
    "spellcheck": "cspell \"src/**/*.{ts,tsx}\"",
    "postinstall": "prisma generate",
    "prepare": "husky",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "inngest:dev": "npx inngest-cli@latest dev"
  },
