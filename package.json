    "dotenv": "^17.3.1",
    "inngest": "^3.52.4",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "next-intl": "^4.8.3",
    "next-themes": "^0.4.6",
    "nuqs": "^2.8.8",
    "radix-ui": "^1.4.3",
    "react": "19.2.4",
